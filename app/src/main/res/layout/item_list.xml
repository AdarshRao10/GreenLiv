<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="No: "/>

        <TextView
            android:id="@+id/seqNo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="SeqNo"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Common Name: "/>

        <TextView
            android:id="@+id/commonName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="African tulip tree"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Botanical name: "/>

        <TextView
            android:id="@+id/botanicalName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Spathodea campanulata  P.Beauv."/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="family: "/>

        <TextView
            android:id="@+id/family"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Bignoniaceae"/>

    </LinearLayout>
</LinearLayout>